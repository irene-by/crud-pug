extends layout

block content
    h1 Все курсы Академии
    a.btn.btn-primary(href="/courses/add") Создать новый курс
    table.table.table-striped
        thred
            tr
                th Id Куса
                th Курс
                th
                th
        tbody
            each course in courses
                tr
                    td= course.id
                    td= course.name
                    td(style="width: 50px;"): a(href="/courses/edit/" + course.id)
                        span.glyphicon.gliphicon-pensil
                    td(style="width: 50px;"): a(href="/courses/delete/" + course.id)
                        span.glyphicon.gliphicon-remove